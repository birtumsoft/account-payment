<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Para que las vistas que hacen inherits de:
        account.view_account_payment_register_form
        
        ahora lo hagan de :
        account_payment_fix.b_inherit_view_account_payment_register_form
        
        Dado que en la vesriÃ³n 14 de odoo la vista del payment register no cuenta 
        con el campo:
        payment_method_code
    -->
    <record id="b_inherit_view_account_payment_register_form" model="ir.ui.view">
        <field name="name">b.inherit.view.account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <field name="payment_method_code" invisible="1"/>
            </form>
        </field>
    </record>
</odoo>
