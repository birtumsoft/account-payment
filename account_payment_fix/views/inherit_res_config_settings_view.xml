<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="b_inherit_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">b.inherit.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']/div" position="after">
                <div id="argentina_localization_section" attrs="{'invisible':[('country_code', '!=', 'AR')]}">
                    <h2>Argentinean Localization</h2>
                    <div class="row mt16 o_settings_container" id="argentina_localization">
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
